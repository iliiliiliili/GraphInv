    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Create Istanbul Json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/prepare-istanbul-dataset.js",
            "runtimeArgs": [
                "--max-old-space-size=60000"
            ],
            "cwd": "${workspaceFolder}/src",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console": "integratedTerminal",
        }
    ]
}